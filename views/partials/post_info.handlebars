<div class="card">
  <div class="card-header">
    <a class="no-button" href='/post/{{id}}'>{{title}}</a>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>{{content}}</p>
      <footer class="blockquote-footer">Posted by {{user.username}} on {{format_date createdAt}}</footer>
    </blockquote>
  </div>
</div>